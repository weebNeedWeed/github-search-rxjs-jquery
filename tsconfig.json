{
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"allowJs": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"sourceMap": true,
		"rootDir": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
